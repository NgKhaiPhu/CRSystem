#include <iostream>
#include <string>
#include <fstream>
#include <sstream>
using namespace std;

struct Node {
	string username;
	string password;
	bool stt;//0-gv, 1-sv
	Node* nxt;
};

void ChangePassword(Node* pCur)
{
	string p1,p2;
	cout << "What your new password: ";
	cin >> p1;
	cout << "Confirm your new password: ";
	cin >> p2;
	if (p1 == p2)
		pCur->password = p1;
	else ChangePassword(pCur);
}
